<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryOfTheDay">

    <TextView
        android:id="@+id/gratulacje"
        android:layout_width="229dp"
        android:layout_height="98dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Gratulacje! przetrwałeś:"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<!-- Tutaj był wyswietlany dzien tygodnia
    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gratulacje" />
-->
    <Button
        android:id="@+id/newDay"
        android:layout_width="241dp"
        android:layout_height="95dp"
        android:layout_marginBottom="16dp"
        android:text="Zacznij kolejny dzień!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/wyniki"
        android:layout_width="485dp"
        android:layout_height="141dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/newDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gratulacje" />


</androidx.constraintlayout.widget.ConstraintLayout>