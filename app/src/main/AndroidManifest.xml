<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.typowy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.typowy.Authors"
            android:screenOrientation="landscape"/>
        <activity
            android:name="com.typowy.SummaryOfWeek"
            android:screenOrientation="landscape"/>
        <activity
            android:name="com.typowy.RankingActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.typowy.SummaryOfTheDay"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.typowy.Week"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.typowy.SecondaryActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.typowy.MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>